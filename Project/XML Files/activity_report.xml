<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bgsurvey">
    <TextView
        android:text="Reporting Of Leaks"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:background="#0684BD"
        android:padding="16dp"
        android:fontFamily="sans-serif-black"/>

    <!-- Button to capture image -->
    <Button
        android:id="@+id/btnCaptureImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capture Image"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_marginBottom="16dp" />

    <!-- ImageView to display the captured image -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:background="#D3D3D3" />

    <!-- Button to fetch location -->
    <Button
        android:id="@+id/btnGetLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Location"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_marginBottom="16dp" />

    <!-- TextView to display location -->
    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location will appear here"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <!-- EditText for adding description -->
    <EditText
        android:id="@+id/edtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter description"
        android:padding="12dp"
        />
    <Button
        android:text="Submit Report"
        android:onClick="submitSurvey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"/>
</LinearLayout>